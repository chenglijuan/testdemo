[
  {
    "description": "这是我们的第一个mock例子",
    "request":{
      "uri":"/demo"
    },
    "response":{
      "text": "这是我的第一个mock文件"
    }
  },
  {
    "description": "模拟一个不带参数的get请求",
    "request":{
      "uri":"/getdemo",
      "method": "get"
    },
    "response":{
      "text": "这是我的第一个get请求的mock文件"
    }
  },
  {
    "description": "模拟带参数的get请求",
    "request":{
      "uri":"/getdemowithparam",
      "method": "get",
      "queries":{
        "name": "huhansan",
        "age":"15"
      }
    },
    "response":{
      "text": "我胡汉三又回来了"
    }
  },
  {
    "description": "模拟不带参数的post请求",
    "request": {
      "uri":"/postdemo",
      "method": "post"
    },
    "response":{
      "text": "模拟不带参数的post请求"
    }
  },
  {
    "description": "模拟带参数的post请求",
    "request": {
      "uri":"/postdemowithparam",
      "method": "post",
      "forms":{
        "name": "lisi",
        "age": "23"
      }
    },
    "response":{
      "text": "模拟带参数的post请求--使用forms"
    }
  },
  {
    "description": "模拟带cookie的get请求",
    "request":{
      "uri": "/get/cookie",
      "method": "get",
      "cookies": {
        "login": "true"
      }
    },
    "response":{
    "text": "模拟带参数的get请求--使用forms"
    }
  },
  {
    "description": "模拟带cookie的post请求",
    "request":{
      "uri": "/post/with/cookie",
      "method": "post",
      "cookies": {
        "login": "true"
      },
      "json": {
        "name": "huhansan",
        "age": "32"
      }
    },
    "response":{
      "status": "200",
      "json": {
        "name": "返回结果值",
        "age": "46"
      }
    }
  },

  {
    "description": "模拟带header的post请求",
    "request":{
      "uri": "/post/with/header",
      "method": "post",
      "cookies": {
        "login": "true"
      },
      "headers": {
        "Content-Type": "application/json"
      },
      "json": {
        "name": "lisi",
        "age": "58"
      }
    },
    "response":{
      "status": "200",
      "json": {
        "name": "返回结果值",
        "age": "46"
      }
    }
  },
  {
    "description": "这是一个会返回cookie的get请求",
    "request":{
      "uri": "/get/with/cookie",
      "method": "get"
    },
    "response":{
      "status": "200",
      "cookies": {
        "name": "zhangsan",
        "login": "true"
      },
      "text": "这是一个会返回cookie的get请求"
    }
  }
]